<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MacHostApp.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:webview="using:AvaloniaWebView"
        mc:Ignorable="d"
        x:Class="MacHostApp.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Name="OperatorAppWindow"
        d:DesignWidth="800"
        d:DesignHeight="450">

  <Design.DataContext>
    <vm:MainWindowViewModel/>
  </Design.DataContext>

  <Grid>
    <!-- IMPORTANT: tag prefix must match the xmlns alias above -->
    <webview:WebView x:Name="webView"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch"/>
  </Grid>
</Window>
